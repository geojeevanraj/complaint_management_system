[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    setup_*.py,
    main_old.py,
    create_demo_data.py,
    query_users.py
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401   # imported but unused (for __init__.py files)
per-file-ignores = 
    __init__.py:F401
